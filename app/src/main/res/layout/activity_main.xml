<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:background="@drawable/background"
>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
        >
            <TextView
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <EditText
                    android:id="@+id/etAddEng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="영어단어"
            />

            <EditText
                    android:id="@+id/etAddKor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="단어 뜻"
            />

            <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="단어 추가하기"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >

            <EditText
                    android:id="@+id/etUpdateNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="업데이트할 번호"
            />


            <EditText
                    android:id="@+id/etUpdateEng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="영어단어"
            />

            <EditText
                    android:id="@+id/etUpdateKor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="단어 뜻"
            />

            <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="단어 업데이트"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >

            <EditText
                    android:id="@+id/etDeleteNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="삭제할 번호"
            />

            <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="단어 삭제"
            />

            <Button
                    android:id="@+id/btnAllRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체 삭제(tv와 collection을)"
            />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>